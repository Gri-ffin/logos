---
import type { HTMLAttributes } from 'astro/types'

interface Book {
  title: string
  slug: string
  chapters: number
}

interface Props extends HTMLAttributes<'div'> {
  books: Book[]
}

const { books, ...attrs } = Astro.props
---

<div {...attrs} class='font-sans text-slate-700 mt-6'>
  <h3
    class='text-3xl font-serif font-bold text-slate-900 mb-6 border-b border-slate-200 pb-2'
  >
    Principal Works
  </h3>

  {
    books.map(work => (
      <div class='mb-8 p-4 bg-white rounded-xl border border-slate-200 shadow-sm'>
        <h4 class='text-xl font-semibold text-indigo-700 mb-4 hover:text-indigo-800 transition-colors'>
          <h4 class='underline decoration-indigo-200 hover:decoration-indigo-400 mb-6'>
            {work.title}
          </h4>
        </h4>

        <div class='grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-8 gap-3'>
          {Array.from({ length: work.chapters }).map((_, index) => {
            const bookNumber = index + 1
            return (
              <a
                href={`/book/${work.slug}/${bookNumber}`}
                class='px-3 py-1 bg-slate-50 text-slate-700 text-sm rounded-md border border-slate-100 hover:bg-slate-100 transition-colors'
              >
                Book {bookNumber}
              </a>
            )
          })}
        </div>
      </div>
    ))
  }
</div>
