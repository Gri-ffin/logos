---
import GreekMorphology from './GreekMorphology.tsx'
---

<div class='min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 font-sans'>
  <!-- Main Content -->
  <main
    class='flex flex-col items-center justify-center px-6 py-20 min-h-[calc(100vh-200px)]'
  >
    <div class='max-w-3xl w-full text-center'>
      <!-- Hero Section -->
      <div class='mb-12'>
        <h2
          class='text-5xl md:text-6xl font-semibold text-slate-900 mb-4 tracking-tight'
        >
          Greek Morphology
        </h2>
        <p
          class='text-xl text-slate-600 font-sans max-w-2xl mx-auto leading-relaxed'
        >
          Explore the rich vocabulary of ancient greek. Search for words, discover
          morphologies, and deepen your understanding of the classical language.
        </p>
      </div>

      <!-- Search Box -->
      <GreekMorphology client:load />

      <!-- Quick Tips -->
      <div class='mt-6 flex flex-wrap justify-center gap-3 font-sans'>
        <span
          class='px-4 py-2 bg-white/60 backdrop-blur rounded-full text-sm text-slate-600 border border-slate-200'
        >
        Try: λόγος
        </span>
        <span
          class='px-4 py-2 bg-white/60 backdrop-blur rounded-full text-sm text-slate-600 border border-slate-200'
        >
        Try: Ζεύς
        </span>
        <span
          class='px-4 py-2 bg-white/60 backdrop-blur rounded-full text-sm text-slate-600 border border-slate-200'
        >
        Try: φιλοσοφία
        </span>
      </div>
    </div>

    <!-- Info Cards -->
    <div class='grid md:grid-cols-3 gap-6 mt-16 font-sans'>
      <div
        class='bg-white/70 backdrop-blur p-6 rounded-xl border border-slate-200 hover:border-indigo-300 transition-colors'
      >
        <div class='text-2xl mb-3'>📚</div>
        <h3 class='font-semibold text-slate-900 mb-2'>Comprehensive</h3>
        <p class='text-sm text-slate-600'>
          Extensive collection Latin vocabulary
        </p>
      </div>
      <div
        class='bg-white/70 backdrop-blur p-6 rounded-xl border border-slate-200 hover:border-indigo-300 transition-colors'
      >
        <div class='text-2xl mb-3'>🎓</div>
        <h3 class='font-semibold text-slate-900 mb-2'>Scholarly</h3>
        <p class='text-sm text-slate-600'>
          Detailed definitions and etymological information
        </p>
      </div>
      <div
        class='bg-white/70 backdrop-blur p-6 rounded-xl border border-slate-200 hover:border-indigo-300 transition-colors'
      >
        <div class='text-2xl mb-3'>⚡</div>
        <h3 class='font-semibold text-slate-900 mb-2'>Fast Search</h3>
        <p class='text-sm text-slate-600'>
          Instant results as you type your query
        </p>
      </div>
    </div>
  </main>
</div>

<style>
  body {
    font-family: 'Georgia', 'Times New Roman', serif;
  }
</style>
